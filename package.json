{
  "name": "address-book",
  "version": "1.0.0",
  "description": "Vanilla ES2016 Address book implementation",
  "main": "index.js",
  "author": "Raoul DIFFOUO",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cucumber": "^4.1.0",
    "cucumber-pretty": "^1.4.1",
    "mocha": "^5.0.5",
    "puppeteer": "^1.2.0",
    "superstatic": "^5.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "scripts": {
    "start": "superstatic -p 3000",
    "build": "webpack --progress --p --mode=production",
    "watch": "webpack --progress --watch --mode=development",
    "cucumber":
      "superstatic -p 3000 2> /dev/null & cucumber-js -f node_modules/cucumber-pretty && lsof -ti tcp:3000 | xargs kill",
    "test": "mocha --require babel-polyfill --require babel-register",
    "test-watch":
      "mocha --require babel-polyfill --require babel-register --watch"
  }
}
